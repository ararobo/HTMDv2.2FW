{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flash Firmware (ST-Link)",
            "type": "shell",
            "command": "STM32_Programmer_CLI",
            "args": [
                "-c",
                "port=SWD",
                "-w",
                "${command:cmake.launchTargetPath}",
                "-v",
                "-rst"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "CMake: build"
        }
    ]
}